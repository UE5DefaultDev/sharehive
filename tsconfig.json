/**
 * This file is the TypeScript configuration file for the project.
 * It specifies the compiler options and the files to include and exclude for TypeScript compilation.
 * This configuration is crucial for ensuring proper type checking, module resolution, and JSX support
 * within the Next.js environment.
 */
{
  "compilerOptions": {
    // Specifies the ECMAScript target version for the generated JavaScript code.
    // ES2017 is a common target for modern browsers and Node.js environments.
    "target": "ES2017",
    // Specifies a list of library files to be included in the compilation.
    // "dom" for browser APIs, "dom.iterable" for iterable DOM types, and "esnext" for latest ECMAScript features.
    "lib": ["dom", "dom.iterable", "esnext"],
    // Allows JavaScript files to be compiled alongside TypeScript files.
    "allowJs": true,
    // Skips type checking of all declaration files (*.d.ts).
    // This can speed up compilation but might hide issues in third-party libraries.
    "skipLibCheck": true,
    // Enables all strict type-checking options. This is recommended for robust code.
    "strict": true,
    // Do not emit output (like JavaScript files) from the TypeScript compiler.
    // This is typical in Next.js where the framework handles the compilation process.
    "noEmit": true,
    // Enables a full range of interoperability between CommonJS and ES Modules.
    "esModuleInterop": true,
    // Specifies the module code generation strategy. "esnext" means the latest ECMAScript module syntax.
    "module": "esnext",
    // Specifies how modules are resolved. "bundler" is recommended for modern bundlers like Webpack and Rollup.
    "moduleResolution": "bundler",
    // Enables importing modules with a `.json` extension.
    "resolveJsonModule": true,
    // Ensures that each file is compiled as a separate module.
    // This is important for certain build optimizations and features in Next.js.
    "isolatedModules": true,
    // Specifies the JSX factory to use. "preserve" means JSX is emitted as is, to be processed by Babel.
    "jsx": "preserve",
    // Enables incremental compilation, which can speed up recompilation in development.
    "incremental": true,
    // Specifies a list of TypeScript language service plugins.
    // The "next" plugin provides Next.js-specific type enhancements and features.
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Configures module alias paths. "@/*" maps to the project root, allowing absolute imports.
    "paths": {
      "@/*": ["./*"]
    }
  },
  // Specifies the files to include in the compilation.
  // "next-env.d.ts" for Next.js environment types, and all .ts/.tsx files in the project.
  // ".next/types/**/*.ts" includes generated types from Next.js.
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  // Specifies the files and folders to exclude from compilation.
  // "node_modules" is typically excluded to avoid compiling third-party libraries.
  "exclude": ["node_modules"]
}